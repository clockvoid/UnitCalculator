<resources>

    <!-- Button style (enable lower case) -->
    <style name="Button2" parent="Widget.AppCompat.Button.Borderless">
        <item name="textAllCaps">false</item>
        <item name="android:textAppearanceButton">@style/TextAppearance.AppCompat.Button</item>
        <item name="colorControlHighlight">@color/colorAccent</item>
        <item name="android:background">@drawable/prefix_button_background</item>
    </style>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:buttonStyle">@style/Button2</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

</resources>
