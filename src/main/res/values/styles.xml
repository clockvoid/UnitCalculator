<resources>

    <!-- Button style (enable lower case) -->
    <style name="MyButton" parent="Base.Widget.AppCompat.Button.Borderless">
        <item name="android:textAllCaps">false</item>
        <item name="textAllCaps">false</item>
        <item name="android:textColor">@color/primary_text_material_dark</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">0dp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="PrefixButtonStyle" parent="MyButton">
        <item name="android:background">@drawable/prefix_button_background</item>
    </style>

    <style name="UnitButtonStyle" parent="MyButton">
        <item name="android:background">@drawable/unit_button_background</item>
    </style>

    <style name="NumericButtonSyle" parent="MyButton">
        <item name="android:background">@drawable/numeric_button_background</item>
    </style>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

</resources>
